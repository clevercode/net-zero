!!!
%html{"ng-app" => "NetZero"}
  %head
    %title Net Zero
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'https://cdn.firebase.com/v0/firebase.js', 'https://cdn.firebase.com/v0/firebase-simple-login.js','application'
    = csrf_meta_tags
    %meta{ name: 'viewport', content: 'initial-scale=1, maximum-scale=1'}
    %meta{ name: 'apple-mobile-web-app-capable', content: 'yes' }
    %meta{ name: 'apple-mobile-web-app-status-bar-style', content: 'black' }

    %link{ rel: 'apple-touch-startup-image', media: '(device-width: 320px) and (-webkit-device-pixel-ratio: 2)', href: 'iPhone/Default-Portrait@2x.png' }
    %link{ rel: 'apple-touch-startup-image', media: '(device-width: 768px) and (orientation: portrait)', href: 'iPad/Default-Portrait.png' }
    %link{ rel: 'apple-touch-startup-image', media: '(device-width: 768px) and (orientation: landscape)', href: 'iPad/Default-Landscape.png' }
    %link{ rel: 'apple-touch-startup-image', media: '(device-width: 768px) and (orientation: portrait) and (-webkit-device-pixel-ratio: 2)', href: 'iPad/Default-Portrait@2x.png' }
    %link{ rel: 'apple-touch-startup-image', media: '(device-width: 768px) and (orientation: landscape) and (-webkit-device-pixel-ratio: 2)', href: 'iPad/Default-Landscape@2x.png' }

    = ios_touch_icon_tag 'iPad/apple-icon_72.png', '72x72'
    = ios_touch_icon_tag 'iPad/apple-icon_144.png', '144x144'
    = ios_touch_icon_tag 'iPhone/apple-icon_57.png', '57x57'
    = ios_touch_icon_tag 'iPhone/apple-icon_114.png', '114x114'

  %body
    = render "partials/header"
    %div(ng-view="")
    #overlay
