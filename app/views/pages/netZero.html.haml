%html{"ng-app" => "NetZero"}
  %head
    %title Net Zero
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'https://cdn.firebase.com/v0/firebase.js', 'https://cdn.firebase.com/v0/firebase-simple-login.js','application'
    = csrf_meta_tags
    %meta{ name: 'viewport', content: 'initial-scale=1, maximum-scale=1'}
